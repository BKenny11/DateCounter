<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4D8DB7</item>
        <item name="android:colorPrimaryDark">#146091</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ToolBarText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AddTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4D8DB7</item>
        <item name="android:colorPrimaryDark">#146091</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabBackground">@android:color/holo_blue_dark</item>
        <item name="tabTextAppearance">@android:color/black</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="android:layout_width">fill_parent</item>
    </style>


</resources>
