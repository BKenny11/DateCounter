<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/border"
            tools:context="com.brendan_and_eric.datecounter.AddActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_text"
            android:textSize="18sp"
            android:paddingBottom="12dp"/>
        <TextView
            android:text="Name:"
            android:id="@+id/nameTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a new Event"
            android:textColorHint="@android:color/darker_gray"
            android:id="@+id/editNameText2"
            android:layout_toRightOf="@id/nameTitle2"/>
        <TextView
            android:text="Type of Event is a"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/eventTitle2"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Select a Date:"
            android:layout_marginTop="12dp"
            android:id="@+id/dateTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <DatePicker android:layout_width="fill_parent"
                    android:layout_height="450dp"
                    android:scaleX=".65"
                    android:scaleY=".65"
                    android:layout_marginTop="-75dp"
                    android:id="@+id/Date2">
        </DatePicker>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-70dp"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/custom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_edit"
            android:textColor="#FFFFFF"
            android:onClick="addItem"/>
        <Button
            android:background="@drawable/custom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/cancel"
            android:textColor="#FFFFFF"
            android:onClick="closeWindow"/>
    </LinearLayout>
</LinearLayout>